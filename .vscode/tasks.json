{
    "version": "2.0.0",
    "tasks": [

        //共通
        {
            "label": "build",
            "type": "shell",
            "command": "",
            "dependsOn":[
                "cui:build",
                "gui:build"
            ]
        },



        //CUI
        {
            "label": "cui:build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/cui/WinFormsPropertyFinder.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "cui:publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/cui/WinFormsPropertyFinder.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "cui:watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/cui/WinFormsPropertyFinder.csproj"
            ],
            "problemMatcher": "$msCompile"
        },

        //GUI
        {
            "label": "gui:build",
            "type": "shell",
            "command": "flutter",
            "args": [
                "build",
                "windows"
            ],
            "options": {
                "cwd": "${workspaceFolder}/gui"
            }
        }


    ],
}